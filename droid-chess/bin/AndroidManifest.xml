<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.droid_chess"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.droid_chess.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.droid_chess.GameActivity"
            android:label="@string/title_activity_game"
            android:parentActivityName="com.example.droid_chess.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.droid_chess.MainActivity" />
        </activity>
        <activity
            android:name="com.example.droid_chess.Chess"
            android:label="@string/title_activity_chess" >
        </activity>
        <activity
            android:name="com.example.droid_chess.Instructions"
            android:label="@string/title_activity_instructions" >
        </activity>
        <activity
            android:name="com.example.droid_chess.NetGameActivityWhite"
            android:label="@string/title_activity_net_game" >
        </activity>
        <activity
            android:name="com.example.droid_chess.NetGameSetup"
            android:label="@string/title_activity_net_game_setup" >
        </activity>
    </application>

</manifest>